<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.activity.SuccessfulActivity">


    <ImageView
        android:id="@+id/successfulImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toStartOf="@id/guideline59"
        app:layout_constraintStart_toEndOf="@id/guideline58"
        app:layout_constraintTop_toBottomOf="@id/guideline60"
        app:srcCompat="@drawable/baseline_done_24" />

    <TextView
        android:id="@+id/successfulText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/successful_text"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/guideline59"
        app:layout_constraintStart_toEndOf="@id/guideline58"
        app:layout_constraintTop_toBottomOf="@id/successfulImage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToHomeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/back_to_home"
        android:textSize="17sp"
        android:onClick="backToHome"
        android:backgroundTint="@color/blue"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/guideline61"
        app:layout_constraintStart_toEndOf="@id/guideline58"
        app:layout_constraintEnd_toStartOf="@id/guideline59"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="113dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="397dp" />
</androidx.constraintlayout.widget.ConstraintLayout>